$g-btn
	@extend $inline
	background-color: transparent
	text-decoration: none
	text-align: center
	cursor: pointer
	border: none
	outline none
$g-btn--size-normal
	color white
	font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
	font-size 24px
	line-height: 1.4
	font-weight 700
	text-transform uppercase
	padding 9px 30px
	height 52px
	background-color #dc7862
	border-radius 24px
	box-shadow 0 9px 9.4px 0.6px rgba(166, 166, 166, 0.2)

$g-btn--color-orange
.g-btn--color-green
	mainColor = #f57965
	background-color: mainColor
	@extend $g-tr-bgcolor
	color #fff
	&.state--loading:hover
		background-color: mainColor
	&:hover
		background-color: lighten(mainColor, 15%)
	&:active
		background-color: darken(mainColor, 15%)

$g-button--wide
	+tablet()
		width: 80%
	width: 100%

// style button 1
$g-btn-st1
	@extend $g-btn
	@extend $g-btn--size-normal
	@extend $g-btn--color-orange